<!--
    <param name="port"         type="string" value="/dev/ob_lidar"/> 
-->
<launch>
  <node name="ydlidar_node"  pkg="ydlidar"  type="ydlidar_node" output="screen" respawn="false" >
    <!--<param name="port"         type="string" value="/dev/ydlidar"/>  -->
    <!-- <param name="port"         type="string" value="/dev/ttyACM0"/>  -->
    <param name="port"         type="string" value="/dev/ttyUSB1"/>  
 
    <param name="frame_id"     type="string" value="laser_frame"/>
    <param name="resolution_fixed"    type="bool"   value="true"/>
    <param name="auto_reconnect"    type="bool"   value="true"/>
    <param name="reversion"    type="bool"   value="true"/>
    <param name="angle_min"    type="double" value="-180" />
    <param name="angle_max"    type="double" value="180" />
    <!--<param name="range_min"    type="double" value="0.23" />-->
    <param name="range_min"    type="double" value="0.08" />
    <param name="range_max"    type="double" value="16.0" />
    <!--雷达屏蔽 单位：度 前方为0度-->
    <param name="ignore_array" type="string" value="-181,-105,110,181" /> 
    <param name="samp_rate"    type="int"    value="9"/>
    <param name="frequency"    type="double" value="10"/>
    <param name="point_cloud_preservative" type="bool" value="true" />
  </node>

  <!--设置雷达的安装的位置与角度-->
  <!--<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser4"
    args="0.0 0.0 0.25 0.0 0.0  0.0 /base_footprint /laser_frame 40" />-->
  <!--<node pkg="tf" type="static_transform_publisher" name="base_link_to_laser4"
    args="0.18 0.0 0.2 -0.1 0.0  0.0 /base_footprint /laser_frame 40" />-->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser4"
    args="0.0 0.0 0.2 -0.1 0.0  0.0 /base_footprint /laser_frame 40" />
</launch>
