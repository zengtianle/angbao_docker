<launch>
  <arg name="use_map_topic"   default="true"/><!-- true default-->
  <arg name="scan_topic"      default="scan"/> 
  <arg name="initial_pose_x"  default="0.0"/>
  <arg name="initial_pose_y"  default="0.0"/>
  <arg name="initial_pose_a"  default="0.0"/>
  <arg name="odom_frame_id"   default="odom"/>
  <arg name="base_frame_id"   default="base_footprint"/>
  <arg name="global_frame_id" default="/map"/>
  <arg name="sub_map_topic" default="/map"/>

  <node pkg="amcl" type="amcl" name="amcl" respawn="true" output="screen">
    <param name="use_map_topic"             value="$(arg use_map_topic)"/>
    <param name="first_map_only"             value="False"/>
    <!-- Publish scans from best pose at a max of 10 Hz -->
    <param name="odom_model_type"           value="diff"/>
    <param name="gui_publish_rate"          value="10.0"/>
    <param name="laser_max_beams"             value="60"/><!-- 60 default-->
    <param name="laser_max_range"           value="-1"/>
    <param name="min_particles"             value="500"/>
    <param name="max_particles"             value="5000"/><!-- 2000 default 10000max-->
    <param name="kld_err"                   value="0.02"/><!-- 0.05 default-->
    <param name="kld_z"                     value="0.99"/>
    <param name="odom_alpha1"               value="0.8"/><!-- 0.2 default-->
    <param name="odom_alpha2"               value="0.4"/><!-- 0.2 default-->
    <!-- translation std dev, m -->
    <param name="odom_alpha3"               value="0.8"/> <!-- 0.2 default-->
    <param name="odom_alpha4"               value="0.4"/><!-- 0.2 default-->
    <param name="odom_alpha5"               value="0.1"/>
    <param name="laser_z_hit"               value="0.8"/>
    <param name="laser_z_short"             value="0.05"/>
    <param name="laser_z_max"               value="0.05"/>
    <param name="laser_z_rand"              value="0.2"/>
    <param name="laser_sigma_hit"           value="0.2"/>
    <param name="laser_lambda_short"        value="0.1"/>
    <param name="laser_model_type"          value="likelihood_field"/>
    <!-- <param name="laser_model_type" value="beam"/> -->
    <param name="laser_likelihood_max_dist" value="2.0"/><!-- 2.0 default-->
    <param name="update_min_d"              value="0.1"/>
    <param name="update_min_a"              value="0.1"/>
    <param name="odom_frame_id"             value="$(arg odom_frame_id)"/> 
    <param name="base_frame_id"             value="$(arg base_frame_id)"/> 
    <param name="global_frame_id"           value="$(arg global_frame_id)"/>
    <param name="resample_interval"         value="0.5"/>
    <!-- Increase tolerance because the computer can get quite busy -->
    <param name="transform_tolerance"       value="1.0"/><!-- 1.0 default-->
    <param name="recovery_alpha_slow"       value="0.01"/>
    <param name="recovery_alpha_fast"       value="0.1"/>
    <param name="initial_cov_xx"       value="0.1"/>
    <param name="initial_cov_yy"       value="0.1"/>
    <param name="initial_cov_aa"       value="0.06853891945200942"/>
    <remap from="scan"                      to="$(arg scan_topic)"/>
    <remap from="map"                      to="$(arg sub_map_topic)"/>
  </node>
</launch>
